{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "A simple URL shortener built with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "heroku-postbuild": "npm run build && cd client && npm install && npm run build"
  },
  "keywords": ["url-shortener", "typescript", "express", "react"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
